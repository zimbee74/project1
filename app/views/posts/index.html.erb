<div class="container-fluid">
  <div class="row">

    <div class="col-4">
      1st of three columns TEST
    </div><!-- end  of 1st col -->

    <div class="col-4">
      2nd of three columns
<ul>
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.heading, post_path(post.id) %>
      (<%= post.user.name %>)
      <%= cl_image_tag post.image, class: 'userpicpost' %>
    </li>
  <% end %>
</ul>
    </div><!-- end  of 2nd col -->
    <div class="col-4">
     <div class="friends" >Friends</div>

     <ul class="friendslist">
     <% @users.each do |user| %>
        <li><div><%= cl_image_tag user.image, class: 'userpic' %></div>
        <span><%= link_to user.name, user_path(user.id), class: 'usernametxt'%></span>
        <hr>
        </li>
     <% end %>
     </ul>
    </div>
